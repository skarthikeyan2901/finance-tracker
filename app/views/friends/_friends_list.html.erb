<div class="row mt-3">
  <div class="col-12">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col">First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @friends.each do |friend| %>
            <tr>
              <td scope="row"><%= friend.first_name %></td>
              <td><%= friend.last_name %></td>
              <td><%= friend.email %></td>
              <td class="d-flex justify-content-around">
                <%= link_to 'View Profile', user_path(friend), class: "btn btn-warning btn-sm"%>
                <%= link_to 'Stop Following', friendship_path(friend), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-warning btn-sm"%>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>