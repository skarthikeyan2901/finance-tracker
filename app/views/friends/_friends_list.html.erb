<div class="row mt-3">
  <div class="col-9">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col">Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @friends.each do |friend| %>
            <tr>
              <td scope="row"><%= friend.email %></td>
              <td><%= friend.first_name %></td>
              <td><%= friend.last_name %></td>
              <td><%= link_to 'Stop Following', '#', data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-warning btn-sm"%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>